<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
  logicalFilePath="changelog-7.0">

<changeSet author="author" id="changelog-7.0" >
    <addColumn tableName="tc_users">
      <column name="manhuntRole" type="int" />
      <column name="triggerManhuntActions" type="BOOLEAN" defaultValueBoolean="false" />
    </addColumn>

    <addColumn tableName="tc_servers">
        <column name="triggerManhuntActions" type="BOOLEAN" defaultValueBoolean="false" />
    </addColumn>

    <addColumn tableName="tc_devices">
        <column name="manhuntPositionId" type="int" />
        <column name="manhuntRole" type="int" />
        <column name="skipNextManhuntLocation" type="BOOLEAN" defaultValueBoolean="false" />
    </addColumn>

    <addColumn tableName="tc_positions">
        <column name="isManhunt" type="BOOLEAN" />
    </addColumn>

    <createTable tableName="tc_manhunts">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="start" type="timestamp"/>
      <column name="frequency" type="bigint"/>
      <column name="speedHuntLimit" type="int" />
      <column name="locationRequestLimit" type="int" />
    </createTable>

    <createTable tableName="tc_speedHunts">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="manhuntsId" type="int"/>
      <column name="userId" type="int"/>
      <column name="deviceId" type="int"/>
    </createTable>

    <createTable tableName="tc_locationRequests">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true"/>
      </column>
      <column name="speedHuntsId" type="int"/>
      <column name="userId" type="int"/>
      <column name="time" type="timestamp"/>
    </createTable>

    <createTable tableName="tc_catches">
        <column name="id" type="int" autoIncrement="true">
            <constraints primaryKey="true"/>
        </column>
        <column name="manhuntsId" type="int"/>
        <column name="userId" type="int"/>
        <column name="deviceId" type="int"/>
        <column name="time" type="timestamp"/>
    </createTable>

    <createTable tableName="tc_joker_types">
        <column name="id" type="INT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="code" type="NVARCHAR(50)">
            <constraints nullable="false" unique="true"/>
        </column>
    </createTable>

    <insert tableName="tc_joker_types">
        <column name="id" valueNumeric="1"/>
        <column name="code" value="HUNTER_QUERY"/>
    </insert>
    <insert tableName="tc_joker_types">
        <column name="id" valueNumeric="2"/>
        <column name="code" value="SKIP_LOCATION"/>
    </insert>
    <insert tableName="tc_joker_types">
        <column name="id" valueNumeric="3"/>
        <column name="code" value="REVEAL_SPEEDHUNT"/>
    </insert>

    <createTable tableName="tc_jokers">
        <column name="id" type="INT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="manhuntsId" type="INT">
            <constraints nullable="false"/>
        </column>
        <column name="userId" type="INT">
            <constraints nullable="false"/>
        </column>
        <column name="jokerTypeId" type="INT">
            <constraints nullable="false"/>
        </column>
        <column name="status" type="INT">
            <constraints nullable="false"/>
        </column>
        <column name="unlockedAt" type="timestamp"/>
        <column name="usedAt" type="timestamp"/>
    </createTable>

    <createTable tableName="tc_user_manhunt">
      <column name="userid" type="INT">
        <constraints nullable="false" />
      </column>
      <column name="manhuntId" type="INT">
        <constraints nullable="false" />
      </column>
    </createTable>

    <createTable tableName="tc_user_speedHunt">
      <column name="userid" type="INT">
        <constraints nullable="false" />
      </column>
      <column name="speedHuntId" type="INT">
        <constraints nullable="false" />
      </column>
    </createTable>

    <createTable tableName="tc_user_locationRequest">
      <column name="userid" type="INT">
        <constraints nullable="false" />
      </column>
      <column name="speedHuntRequestId" type="INT">
        <constraints nullable="false" />
      </column>
    </createTable>

    <createTable tableName="tc_user_catches">
        <column name="userid" type="INT">
            <constraints nullable="false" />
        </column>
        <column name="catchesId" type="INT">
            <constraints nullable="false" />
        </column>
    </createTable>

    <createTable tableName="tc_user_joker">
        <column name="userid" type="INT">
            <constraints nullable="false" />
        </column>
        <column name="jokerId" type="INT">
            <constraints nullable="false" />
        </column>
    </createTable>
  </changeSet>

</databaseChangeLog>